<div class="row justify-content-center">
  <div class="col-8" style="margin-top: 100px;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs mt-25px">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email",class:"one-email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password",class:"one-email"} %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions d-flex justify-content-between">
        <%= f.button :submit, "Log in", class:"bites-button" %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class:"btn bites-button" %><br />
        <% end %>
      </div>
    <% end %>


  </div>
      <%= render "devise/shared/links" %>
</div>
