                <h2>Wednesday</h2>
                <p><%= @recipes.second.name %></p>
                <div class="icon-position">
                  <% @recipes.third.reviews.sample.rating.times do %>
                    <i class="fa-solid fa-star"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
          <li>
